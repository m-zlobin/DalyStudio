@using Dalystudio.biz
﻿@using Microsoft.Extensions.Primitives
@using Dalystudio.biz
@using Dalystudio.biz.Extensions
@{
    bool isWebP = Context.IsWebP();

}
<!DOCTYPE html>
<html lang="en" class="@Html.Raw(isWebP ? "webp" : "no-webp")">

