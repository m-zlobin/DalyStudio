<body>


    <partial name="_Header" />
    <main>
        @RenderBody()
    </main>
    <!-- Scroll-up -->
    <div class="scroll-up">
        <a href="#totop"><i class="icon-angle-double-up"></i></a>
    </div>

    <!-- JSON-LD markup generated by Google Structured Data Markup Helper. -->

    <script type="application/ld+json">

        {

        "@@context" : "http://schema.org",
        "@@type" : "Organization",
        "name" : "Dalystudio",
        "image" : "https://dalystudio.biz/img/dalystudio.jpg",
        "contactPoint": {
        "@@type": "ContactPoint",
        "telephone": "+1 973-580-4400",
        "contactType": "customer service",
        "email": "dalystudio@gmail.com"
        },
        "address" : {
        "@@type" : "PostalAddress",
        "streetAddress" : "Newark",
        "addressLocality" : "New Jersey",
        "addressRegion" : "USA",
        "postalCode" : "NJ 07103"
        },
        "url" : "https://dalystudio.biz/"
        }
    </script>

    <script src="~/dist/main_jquery.js" defer></script>
    <script src="~/dist/main_bootstrap.js" defer></script>
    <script src="~/dist/vendor_src.js" defer></script>
    <script src="~/dist/jquery_plugins.js" defer></script>
    <script src="~/dist/effect_plugins.js" defer></script>
    <script src="~/dist/main.js" defer></script>

    @RenderSection("Scripts", required: false)
    <script>
                if ('serviceWorker' in navigator) {
                    window.addEventListener('load', function () {
                        navigator.serviceWorker.register('/dist/sw.js', { scope: '/' }).then(function (registration) {
                            // Registration was successful
                            console.log('ServiceWorker registration successful with scope: ', registration.scope);
                        }, function (err) {
                            // registration failed :(
                            console.log('ServiceWorker registration failed: ', err);
                        });
                    });
                }
        </script>

</body>
</html>
